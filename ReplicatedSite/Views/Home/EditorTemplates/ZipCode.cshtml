@model DistributorSearch

@{
    var contextID = Guid.NewGuid().ToString();
}

<div class="view-distributor info" id="view-zipcodesearch-@contextID" name="zipcode" data-container="view-zip-search">

    <div class="form-group row margin-5">
        @Html.LabelFor(c => c.CustomerZipCode, new { @class = "control-label" })
        <div class="space-5"></div>
        <div class="row margin-5">

            <div class="col-xs-4">
                @Html.EditorFor(c => c.CustomerZipCode, new
        {
            htmlAttributes = new
                 {
                     @class = "form-control search-field",
                     data_role = "search-field",
                     id = Html.IdFor(c => c.CustomerZipCode),
                     name = Html.NameFor(c => c.CustomerZipCode)
                 }
        })
                @Html.ValidationMessageFor(c => c.CustomerZipCode)
            </div>
            <br />



        </div>
        <div class="space-15"></div>
        <button role="button" class="btn btn-danger search" data-role="search" id="zip-search">Search</button>
    </div>
</div>

