@model DistributorSearch

<div class="modal fade" id="designerSearchModal" data-backdrop="true" data-remote="false" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-describedby="Heading" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" id="close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3>Search Results</h3>
                <div class="modal-title">

                    <h4 class="modal-title">Please Select from the list below</h4>
                </div>
                <hr />
            </div>

            <div class="modal-body" style="height: 400px; overflow: auto;">

                <div id="search-results"></div>
                <div id="noResults">
                    No distributor(s) or event(s) found. Please adjust the search criteria and try again. Or, let us help you find a distributor in your area by clicking <a href="javascript:;" id="secondSearch">here</a>.
                </div>
                <hr />
                <div id="search-results">
                    <div class="row margin-10 results-header-row">
                        <div class="col-sm-2 col-sm-offset-2">
                            <h5 class="text-uppercase"> Name </h5>
                        </div>
                        <div class="col-sm-2">
                            <h5 class="text-uppercase">Location</h5>
                        </div>
                        <div class="col-sm-4">
                            <h5 class="text-uppercase text-center">Site Name</h5>
                        </div>
                        <div class="col-sm-2">
                            <h5 class="text-uppercase text-center">Options</h5>
                        </div>
                    </div>
                    @foreach (var distributor in Model.BaseQuery)
                    {
                        var replicatedSiteUrl = "" + distributor.WebAlias;
                        var enrollmentUrl = "" + distributor.WebAlias + "/enrollment";

                        <div class="row margin-10 results-row">
                            <div class="col-sm-2 results-info">
                                <img src="@Model.AvatarUrl" />
                            </div>
                            <div class="col-sm-2 results-info name">
                                <a href="@replicatedSiteUrl" data-url="@replicatedSiteUrl">@distributor.FirstName @distributor.LastName</a>
                            </div>
                            <div class="col-sm-2 results-info location">
                                @distributor.City
                                <br />
                                @distributor.State
                            </div>
                            <div class="col-xs-4 results-info text-center">
                                <a href="@replicatedSiteUrl" data-url="@replicatedSiteUrl">@distributor.WebAlias</a>
                            </div>
                            <div class="col-sm-2">
                                <a data-role="@replicatedSiteUrl" class="btn btn-success btn-block">Shop</a>
                                <br />
                                <a data-role="use-distributor" href="@Url.Action("Packs", "Enrollment")" class="btn btn-info btn-block">Enroll</a>
                            </div>
                            <hr />
                        </div>
                    }

                </div>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
