@model AccountRegistrationViewModel

<div class="panel panel-default" id="personal-info-panel">
    <div class="panel-heading">
        <h3 class="panel-title">Personal Information</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-4">
                <div>@Html.LabelFor(c => c.FirstName, new { @class = "control-label" })</div>
                <div class="form-group">
                    @Html.TextBoxFor(c => c.FirstName, new
                                                        {
                                                            @class = "form-control",
                                                            placeholder = "First Name",
                                                            required = "required",
                                                            id = "txtFirstName",
                                                            data_role = "FirstName"
                                                        })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(c => c.FirstName)
                    </span>
                </div>
            </div>
            <div class="col-sm-4">
                <div>@Html.LabelFor(c => c.MiddleName, new { @class = "control-label" })</div>
                <div class="form-group">
                    @Html.TextBoxFor(c => c.MiddleName, new
                                                        {
                                                            @class = "form-control",
                                                            placeholder = "Middle Name"
                                                        })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(c => c.MiddleName)
                    </span>
                </div>
            </div>
            <div class="col-sm-4">
                <div>@Html.LabelFor(c => c.LastName, new { @class = "control-label" })</div>
                <div class="form-group">
                    @Html.TextBoxFor(c => c.LastName, new
                                                        {
                                                            @class = "form-control",
                                                            placeholder = "Last Name",
                                                            required = "required",
                                                            id = "txtLastName",
                                                            data_role = "LastName"
                                                        })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(c => c.LastName)
                    </span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div>@Html.LabelFor(c => c.Username, new { @class = "control-label" })</div>
                <div class="form-group">
                    @Html.EditorFor(c => c.Username)
                </div>
            </div>
            <div class="col-sm-6">
                <div>@Html.LabelFor(c => c.ConfirmEmail, new { @class = "control-label" })</div>
                <div class="form-group">
                    @Html.TextBoxFor(c => c.ConfirmEmail, new
                                                        {
                                                            @class = "form-control",
                                                            placeholder = "Re-Enter Email",
                                                            required = "required"
                                                        })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(c => c.ConfirmEmail)
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <div class="checkbox">
                        <label for="@Html.IdFor(c => c.IsOptedIn)" class="text-primary">
                            @Html.CheckBoxFor(c => c.IsOptedIn) I would like to receive emails about product news and exciting opportunities!
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div>@Html.LabelFor(c => c.Password, new { @class = "control-label" })</div>
                <div class="form-group">

                    @Html.PasswordFor(c => c.Password, new
                                                {
                                                    @class = "form-control password",
                                                    placeholder = "Password",
                                                    required = "required"
                                                })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(c => c.Password)
                    </span>
                </div>
            </div>
            <div class="col-sm-6">
                <div>@Html.LabelFor(c => c.ConfirmPassword, new { @class = "control-label" })</div>
                <div class="form-group">

                    @Html.PasswordFor(c => c.ConfirmPassword, new
                                                {
                                                    @class = "form-control password",
                                                    placeholder = "Re-Enter Password",
                                                    required = "required"
                                                })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(c => c.ConfirmPassword)
                    </span>

                </div>
            </div>
        </div>
    </div>
</div>
