@*Z.M. 5-16-16 #76633 Adding Auto Orders To Enrollment Flow
    Auto Renew For Independent Associate Account and ICAA Membership*@

@model EnrollmentPropertyBag
@{
    var contextID = Guid.NewGuid().ToString();
}

<div id="view-accounttype-@contextID">

    <div class="form-group">
        <p>
            Would you like to set up on Auto Renewal for your Independent Associate Account? (This will be charged on your anniversary date every year in the amount of $29.95)
        </p>
        <div class="radio">
            <div class="radio-inline">
                @Html.RadioButtonFor(m => m.WantAnnualRenewal, false)<span>No</span>
            </div>
            <div class="radio-inline">
                @Html.RadioButtonFor(m => m.WantAnnualRenewal, true, new { Checked = "checked", name = "name" })<span>Yes</span>
            </div>

        </div>
    </div>

    <div class="form-group">
        <p>Would you like to become a member of ICAA for $8.00 per year? (For more information on ICAA visit <a href="http://www.icaaboard.com" target="_blank">www.icaaboard.com</a>)</p>
        <div class="radio">
            <div class="radio-inline">
                @Html.RadioButtonFor(m => m.WantICAAMembership, false)<span>No</span>
            </div>
            <div class="radio-inline">
                @Html.RadioButtonFor(m => m.WantICAAMembership, true)<span>Yes</span>
            </div>
        </div>
    </div>

</div>