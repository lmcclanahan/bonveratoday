@model EnrollmentPropertyBag
@{
    var contextID = Guid.NewGuid().ToString();
}

<div id="view-accounttype-@contextID">
    
    <div class="form-group">
        <div class="radio">
            <label for="AccountType_Distributor">
                <input type="radio" id="AccountType_Distributor" name="AccountTypePreference" value="0" checked />
                Individual Distributor Account
            </label>
        </div>
    </div>

    <div class="form-group">     
        <div class="radio">
            <label for="AccountType_Customer">
                <input type="radio" id="AccountType_Customer" name="AccountTypePreference" value="1" />
                Business Entity Distributor Account
            </label>
        </div>
    </div>

</div>