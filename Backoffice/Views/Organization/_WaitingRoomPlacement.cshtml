@model WaitingRoomListViewModel

@if (Model.HasWaitingRoomCustomers)
{
    <div style="max-height: 300px; overflow-y: auto;">

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.WaitingRoomCustomers)
                    {
                        <tr class="waitingroomnode" data-waitingroomid="@customer.CustomerID">
                            <td>@customer.CustomerID</td>
                            <td>@customer.FirstName</td>
                            <td>@customer.LastName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <p>You have no members to place at this time.</p>
}